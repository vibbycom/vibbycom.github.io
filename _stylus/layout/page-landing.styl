//
.landing
    //
    .hero
        background linear-gradient(0deg, $purple 0%, $link-color 100%)
        background-size cover
        background-position center center
        background-repeat no-repeat
        padding 170px 0 160px
        height auto
        margin 0
        position relative
        +below($xs)
            padding 120px 0 80px
            height auto
        .container
            text-align left
            display flex
            align-items center
            +below($sm)
                text-align center
        .hero-headings
            col(5/12, cycle:2)
            z-index 2
            +below($sm)
                span()
            .block__title
                color #fff
                position relative
                text-align left
                +below($sm)
                    text-align center
            .block__description
                color $light-color
                position relative
                text-align left
                +below($sm)
                    center(360px)
                    text-align center
        .explainer-video
            col(6/12, offset: 1/12, cycle:2)
            z-index 2
            position relative
            +below($sm)
                display none
            .browser-top
                line-height 0
                img
                    max-width 100%
            .video-player
                margin-top -1px
                border-radius 0px 0px 5px 5px
                cursor pointer
                width 900px
                max-width 100%
            .absolute-container
                position absolute
                width 100%
                height 100%
                top 0
                bottom 0
                left 0
                right 0
                display flex
                justify-content center
                align-items center
                .cta__primary--big
                    background-color $link-color
                    color #fff
                    margin-top 0
                    opacity .3
            &:hover
                .cta__primary--big
                    opacity 1
        .hero-svg
            position absolute
            width 100%
            left 0
            right 0
            bottom 0
            z-index 1
            +above(1600px)
                opacity .4
            
    .value-props
        &.blue
            background $blue1
        .value-prop
            padding 50px 0
            span()
            display flex
            align-items center
            justify-content center
            +below($xs)
                display block
                padding 60px 0
            &-text
                col(5/12, cycle:2)
                +below($xs)
                    span()
                .visible-xs
                    max-width 100%
                    border-radius 5px
                    +above($xs)
                        display none
                    img
                        max-width 100%
                h1
                    margin-bottom emRhythm(4, $ms-up2)
                .cta__primary--big
                    background-color $link-color
                    color #fff
            &-animation
                col(6/12, offset: 1/12, cycle:2)
                +below($xs)
                    display none
            svg
                overflow visible
                circle
                    transition 200ms all ease-in
                    cursor pointer
                text
                    &.non-active
                        cursor pointer
                        &:hover
                            fill $link-color
                    

    .try-it
        padding 160px 0
        text-align center
        &.violet
            background linear-gradient(0deg, $violet 0%, $purple 100%)
            position relative
        .container
            max-width 900px
        h2,
        h3
            color #fff
            margin-bottom 30px
        .social-links
            margin 30px 0
            font-size 32px
            display inline-block
        .video-container
            position relative
            height 0
            padding-bottom 56.25%
            vb-div > vb-button
                padding 15px 20px
                background $link-color
                border-radius 2px
            .video-js
                line-height 0
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                text-align left
                &:focus
                    outline none
                .vjs-tech
                    overflow hidden
            .vb-container.vb-v2
                position absolute
                width 100%
                bottom -60px
                top auto

    .join-us
        background-color $blue1
        padding 160px 0
        span(1/1)
        text-align center
        +below($xs)
            padding 60px 0
        h2
            center($sm)
            margin-bottom 40px
        #thank-you-msg
            display none
            margin-bottom 40px
        .cta-create
            background $link-color
            color #fff
            &:hover
                background $link-color-hover
        .nab-form
            background #fff
            border-radius 2px
            center($sm)
            padding 40px 100px
            +below($sm)
                padding 30px
            h4
                font-weight 500
                margin-bottom 20px
            form
                max-width 100%
                margin 0 auto
            label
                color $text-color
            input
                display block
            .nab-form-input
                width 100%
                resize none
                color $text-color
            .cta__primary--big
                margin-top 0
                border 0
                background $link-color
                color #fff
                margin 0 auto
                &:hover
                    background $link-color-hover

