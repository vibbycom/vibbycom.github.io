//
.landing
    //
    .hero
        background linear-gradient(0deg, $purple 0%, $link-color 100%)
        background-size cover
        background-position center center
        background-repeat no-repeat
        padding 170px 0 160px
        height auto
        margin 0
        position relative
        +below($xs)
            padding 120px 0 80px
            height auto
        .container
            text-align left
            display flex
            align-items center
            +below($sm)
                text-align center
        .hero-headings
            col(5/12, cycle:2)
            z-index 2
            +below($sm)
                span()
            .block__title
                color #fff
                position relative
                text-align left
                +below($sm)
                    text-align center
            .block__description
                color $light-color
                position relative
                text-align left
                +below($sm)
                    center(360px)
                    text-align center
        .explainer-video
            col(6/12, offset: 1/12, cycle:2)
            z-index 2
            position relative
            +below($sm)
                display none
            .browser-top
                line-height 0
                img
                    max-width 100%
            .video-player
                margin-top -1px
                border-radius 0px 0px 5px 5px
                cursor pointer
                width 900px
                max-width 100%
            .absolute-container
                position absolute
                width 100%
                height 100%
                top 0
                bottom 0
                left 0
                right 0
                display flex
                justify-content center
                align-items center
                .cta__primary--big
                    background-color $link-color
                    color #fff
                    margin-top 0
                    opacity .3
            &:hover
                .cta__primary--big
                    opacity 1
        .hero-svg
            position absolute
            width 100%
            left 0
            right 0
            bottom 0
            z-index 1
            +above(1600px)
                opacity .4
            
    .value-props
        &.blue
            background $blue1
        .value-prop
            padding 50px 0
            span()
            display flex
            align-items center
            justify-content center
            +below($xs)
                display block
                padding 60px 0
            &-text
                col(5/12, cycle:2)
                +below($xs)
                    span()
                .visible-xs
                    max-width 100%
                    border-radius 5px
                    +above($xs)
                        display none
                    img
                        max-width 100%
                h1
                    margin-bottom emRhythm(4, $ms-up2)
                .cta__primary--big
                    background-color $link-color
                    color #fff
            &-animation
                col(6/12, offset: 1/12, cycle:2)
                +below($xs)
                    display none
            svg
                overflow visible
                circle
                    transition 200ms all ease-in
                    cursor pointer
                text
                    &.non-active
                        cursor pointer
                        &:hover
                            fill $link-color
                    

    .try-it
        padding 160px 0
        text-align center
        &.violet
            background linear-gradient(0deg, $violet 0%, $purple 100%)
            position relative
        h2,
        h3
            color #fff
            margin-bottom 30px
        .video-js
            margin 0 auto
            border-radius 5px
            width 100%
            max-width 900px
            min-height 506px
            text-align left
            &:focus
                outline none
            +below($sm)
                min-height 385px
            +below($xs)
                min-height 280px
            .vjs-tech
                border-radius 5px
                overflow hidden
            #createHighlightBtnDiv-bc-0
                .cc-container
                    position absolute
                    bottom 50px
                    top auto
        .vibbified-svg
            position absolute
            bottom 0
            left 0
            right 0
            +below($lg)
                display none

    .join-us
        background-color $blue1
        padding 160px 0
        span(1/1)
        text-align center
        +below($xs)
            padding 60px 0
        h2
            center(660px)
            margin-bottom 40px
        #thank-you-msg
            display none
            margin-bottom 40px
        .cta-create
            background $link-color
            color #fff
            &:hover
                background $link-color-hover
        .nab-form
            background #fff
            border-radius 2px
            center(550px)
            padding 30px
            h4
                font-weight 500
                margin-bottom 20px
            form
                max-width 100%
                margin 0 auto
            label
                color $text-color
            input
                display block
            .nab-form-input
                width 100%
                resize none
                color $text-color
            .cta__primary--big
                margin-top 0
                border 0
                background $link-color
                color #fff
                margin 0 auto
                &:hover
                    background $link-color-hover


